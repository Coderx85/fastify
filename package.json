{
  "name": "fastify",
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env.development -- tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/index.js",
    "build:vercel": "node scripts/build-serverless.mjs",
    "test": "dotenv -e .env.development -- vitest run",
    "with-dev-env": "dotenv -e .env.development --",
    "test:watch": "dotenv -e .env.development -- vitest",
    "test:polar": "dotenv -e .env.development -- vitest run src/routes/api/payment/polar",
    "db": "dotenv -e .env.development -- drizzle-kit"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.2.0",
    "@fastify/swagger": "^9.6.1",
    "@neondatabase/serverless": "^1.0.2",
    "@polar-sh/fastify": "^0.5.3",
    "@polar-sh/sdk": "^0.42.5",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "fastify": "5.6.1",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^6.1.0",
    "fastify-zod": "^1.4.0",
    "tsconfig-paths": "^4.2.0",
    "zod": "^4.3.6",
    "razorpay": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "20.11.17",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.31.8",
    "esbuild": "^0.27.2",
    "fastify-mailer": "^2.3.1",
    "nodemailer": "^7.0.12",
    "pino-pretty": "^13.1.3",
    "supertest": "^7.2.2",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.21.0",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.18"
  }
}
